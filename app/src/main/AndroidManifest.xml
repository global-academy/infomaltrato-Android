        <activity
            android:name=".InformacionAplicacionActivity"
            android:label="@string/title_activity_informacion_aplicacion" >
        </activity>
        <activity
            android:name=".FormularioActivity"
            android:label="@string/title_activity_formulario" >
        </activity>
        <activity
            android:name=".DenunciasActivity"
            android:label="@string/title_activity_denuncias" >
